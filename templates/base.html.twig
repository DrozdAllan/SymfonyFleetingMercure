<!DOCTYPE html>
<html>
	<head>
		<meta
		charset="UTF-8">
		{# <meta http-equiv="X-UA-Compatible" content="IE=edge"> #}
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>
			{% block title %}
				ProjectFleeting
			{% endblock %}
		</title>
		{# Run `composer require symfony/webpack-encore-bundle` and uncomment the following Encore helpers to start using Symfony UX #}
		{% block stylesheets %}
			{#{{ encore_entry_link_tags('app') }}#}

			{# bootstrap 4.6 #}
			<link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}"> <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
			<link rel="stylesheet" href="{{ asset('css/all.css') }}">
		{% endblock %}
	</head>
	<body>
		{% include "shared/_navbar.html.twig" %}

		<video autoplay loop muted poster="{{ asset('image/posterbrand.png') }}">
			<source src="{{ asset('video/Pub_Fleeting.mp4') }}" type="video/mp4">
			Your browser does not support the video tag.
		</video>
		<div class="text-center py-5 mobile-bg">

			{% include "shared/_flash.html.twig" %}

			{% block body %}{% endblock %}
		</div>
		<footer class="footer">
			{% include "shared/_footer.html.twig" %}
		</footer>

		<script src="{{ asset('js/jquery.js') }}"></script>
		<script src="{{ asset('js/bootstrap.js') }}"></script>
		<script src="https://cdn.jsdelivr.net/npm/bs-custom-file-input/dist/bs-custom-file-input.min.js"></script>
		<script>
			$(document).ready(function () {

const cgu = sessionStorage.getItem('cgu');
if (! cgu) {
$('#staticBackdrop').modal('show');
}

$(".navbar-toggler").on("click", function () {
$(".navbar-collapse").toggle('show');
});

$('.droptoggle').focusin(function () {
$(this).children('.dropdown-menu').slideDown(300);
});
$('.droptoggle').focusout(function () {
$(this).children('.dropdown-menu').slideToggle(300);
})
$('.modalzz').click(function () {
sessionStorage.setItem('cgu', 'ok');
})
});
		</script>


		{% block javascripts %}{% endblock %}
	</body>

</html>
