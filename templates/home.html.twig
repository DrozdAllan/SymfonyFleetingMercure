{% extends 'base.html.twig' %}

{% block title %}
	Fleeting
{% endblock %}

{% block body %}

			<div class="row">
				<h1>
					Derni√®res inscriptions
				</h1>
				{% for user in users %}

					<div class="card text-white bg-warning m-3" style="max-width: 20rem;">
						<div class="card-header">
							<h3>
								{{ user.username }}
							</h3>
						</div>
						<div class="card-body">
							{% for image in user.images %}
								<img src="{{ asset('/uploads/images/' ~ image.imageFilename) }}" alt="image" width="250">
							{% endfor %}
							<p class="card-text">
								{{ user.shortdescription }}
							</p>

						</div>
						<a href="{{ path('viewAnnouncer', {'username': user.username}) }}">
							En savoir plus
						</a>
					</div>
				{% endfor %}

			</div>

{% endblock %}
