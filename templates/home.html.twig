{% extends 'base.html.twig' %}

{% block title %}
	Fleeting
{% endblock %}

{% block body %}

	<main>

		<section class="py-5 text-center container">
			<div class="row py-lg-5">
				<div class="col-lg-6 col-md-8 mx-auto">
					<h3 class="fw-light">
						Bannière vidéo
					</h3>
				</div>
			</div>
		</section>

		<div class="album py-5">
			<div class="container">

				<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

					{% for user in users %}
						<div class="col">
							<div class="card shadow-sm">
								<div class="bd-placeholder-img card-img-top" width="100%" height="225" role="img" focusable="false">
									<title>
										Placeholder
									</title>
									{% for image in user.images %}
										<img src="{{ asset('/uploads/images/' ~ image.imageFilename) }}" alt="image" width="250">
									{% endfor %}
								</div>
								<div class="card-body">
									<p class="card-text">
										{{ user.shortdescription }}
									</p>
									<div class="d-flex justify-content-between align-items-center">
										<div class="btn-group">
											<a href="{{ path('viewAnnouncer', {'username': user.username}) }}" type="button" class="btn btn-sm btn-outline-secondary">
												En savoir plus
											</a>
											{% if is_granted("ROLE_ADMIN") %}
												<a href="#" type="button" class="btn btn-sm btn-outline-secondary">
													Edit
												</a>
											{% endif %}
										</div>
										<small class="text-muted">
											{{ user.username }}
										</small>
									</div>
								</div>
							</div>
						</div>
					{% endfor %}

				</div>
			</div>
		</div>

	</main>

{% endblock %}
